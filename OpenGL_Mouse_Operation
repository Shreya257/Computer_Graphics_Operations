
Problem Statement: Create a 2d object and perform rotation and scaling using the click of a mouse. 
OpenGL program to demonstrate transformation using keyboard and mouse interactions.




C++ Code: (2dtransform.cpp)

#include<stdio.h> #include<conio.h> #include<GL/glut.h> float angle = 2;
int x1 = 0; int x2 = 0; int y1 = 0; int y2 = 0; int r1 = 0; int r2 = 0; int r3 = 0; int r4 = 0; int r = 4, g = 1, b = 0;

void myinit(void)
{
glClearColor(1.0, 1.0, 1.0, 0.0); glMatrixMode(GL_PROJECTION); glLoadIdentity();
}

void polygon(void)
{
glClear(GL_COLOR_BUFFER_BIT); glColor3f(0.0, 0.0, 1.0);
glScalef(0.9, 1, 0);
glRotatef(angle, 0.0, 0.0, 3.0); glBegin(GL_POLYGON); glVertex3f(0.25, 0.25, 0.0);
glVertex3f(0.75, 0.25, 0.0);
glVertex3f(0.75, 0.75, 0.0);
glVertex3f(0.25, 0.75, 0.0); glEnd();
glFlush();
}

void mouse(int btn, int state, int x, int y)
{
if (btn == GLUT_RIGHT_BUTTON && state == GLUT_DOWN)
{
 
x1 = 200; x2 = 250; y1 = 200; y2 = 250;
r = 1; g = 5; b = 2;
}
if (btn == GLUT_LEFT_BUTTON && state == GLUT_DOWN)
{
x1 = 200; x2 = 300; y1 = 200; y2 = 300;
r = 1; g = 5; b = 2;
}
glutPostRedisplay();
}

void keyboard(unsigned char key, int x, int y) {

switch (key) { case 'a':
x1 = 200; x2 = 250; y1 = 200; y2 = 250;
break; case 'b':
x1 = 200; x2 = 300; y1 = 200; y2 = 300;
break; case 'c':
r1 = 5; r4 = 1;
break; case 'd':
r1 = -5; r4 = 1;
break;
}
glutPostRedisplay();
}

int main(int argc, char** argv)
{
glutInit(&argc, argv);
glutInitDisplayMode(GLUT_SINGLE | GLUT_RGB | GLUT_DEPTH); glutInitWindowPosition(50, 100);
glutInitWindowSize(640, 480);
glutCreateWindow("Open Gl 2D Geometric Transformation"); myinit();
glutDisplayFunc(polygon); glutMainLoop();
}
